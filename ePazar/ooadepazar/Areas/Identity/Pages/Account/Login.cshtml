@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="row w-100">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1>
                    <section>
                        <form id="account" method="post">
                            <h2 class="h4 text-center mb-3">Prijavite se koristeći lokalni račun.</h2>
                            <hr class="mb-4" />
                            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ime@primjer.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="lozinka" />
                                <label asp-for="Input.Password" class="form-label">Lozinka</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    Zapamti me
                                </label>
                            </div>

                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Prijavi se</button>
                            </div>

                            <div class="mt-3 text-center">
                                <p class="mb-1">
                                    <a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                                </p>
                                <p class="mb-1">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se kao novi korisnik</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Ponovno pošalji potvrdu emaila</a>
                                </p>
                            </div>
                        </form>
                    </section>

                    <hr class="my-4" />

                    <section class="text-center">
                        <h3 class="h5 mb-3">Ili se prijavite putem drugih servisa.</h3>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        Nema konfigurisanih vanjskih servisa za autentifikaciju. Pogledajte ovaj
                                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank" rel="noopener noreferrer">članak</a>
                                        o postavljanju podrške za prijavu putem vanjskih servisa u ovoj ASP.NET aplikaciji.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-secondary m-1" name="provider" value="@provider.Name" title="Prijavite se koristeći svoj @provider.DisplayName račun">@provider.DisplayName</button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}