@using Microsoft.AspNetCore.Identity
@using ooadepazar.Data
@using ooadepazar.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context

@{
    var user = await UserManager.GetUserAsync(User);
    var firstLetter = user?.Ime?.FirstOrDefault().ToString()?.ToUpper() ?? "?";
    var random = new Random(user?.UserName?.GetHashCode() ?? 0);
    var bgColor = $"#{random.Next(0x1000000):X6}";
    int unreadCount = 0;
    var currentUser = await UserManager.GetUserAsync(User);
    if (currentUser != null)
    {
        unreadCount = _context.Notifikacija
            .Where(n => n.KorisnikId.Id == currentUser.Id && !n.Procitana)
            .Count();
    }
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link text-dark" asp-area="" asp-controller="UserManagement" asp-action="Index">
                Korisnici
            </a>
        </li>
    }
    
    <li class="nav-item d-flex align-items-center position-relative me-2">
        <a class="nav-link text-dark position-relative" asp-area="" asp-controller="Notifikacija" asp-action="Index" title="Notifikacije">
            <i class="bi bi-bell fs-5"></i>

            @if (unreadCount > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                      style="font-size: 0.65rem;">
                    @unreadCount
                    <span class="visually-hidden">neproƒçitane notifikacije</span>
                </span>
            }
        </a>
    </li>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="rounded-circle d-flex justify-content-center align-items-center me-2"
                 style="width: 36px; height: 36px; background-color:@bgColor; color: white; font-weight: bold;">
                @firstLetter
            </div>
            <span class="text-dark fw-semibold">@user?.Ime</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person"></i> Profil
                </a>
            </li>
            <li>
                <form class="dropdown-item p-0" id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn w-100 text-start">
                        <i class="bi bi-box-arrow-right"></i> Odjavi se
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
